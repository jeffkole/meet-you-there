  <!-- END CONTAINER FLUID-->

  <!-- BEGIN BODY -->
  <div class="container">
    <div class="grid">
      <div class="col-1-2">
        <div id="bucketsView" class="module">
          <h4 class="fa fa-bitbucket" class="addNew">&nbsp;&nbsp;Add New Bucket</h4>
          <p>Fill out the address form with the location of the bucket you'd like to add.
            <br>
            An email confirmation will be sent to your registered email.</p>
            <p class="fa fa-check-square-o" class="validRequired">&nbsp;&nbsp;Valid address with zipcode required.</p>
          <form id="addBucket" action="/success" method="post">
            <div class="form-group">
              <input id="street" placeholder="Street" type="text" class="form-control" name="street" required>
            </div>
            <div class="form-group">
              <input id="city" placeholder="City" type="text" class="form-control" name="city" required>
            </div>
            <div class="form-group">
              <input id="state" placeholder="State" type="text" class="form-control" name="state" required>
            </div>
            <div class="form-group">
              <input id="zip" placeholder="Zip" type="text" class="form-control" name="zip" required>
            </div>
            <button type="submit" class="btn btn-warning btn-sm">Submit</button>
          </form>
        </div>
      </div>
      <div class="col-1-2">
        <div class="module">
          <h4 class="fa fa-bitbucket" class="addNew">&nbsp;&nbsp;Bucket Summary</h4>
          <p id="bucketCount"></p>
          <ul id="listview" data-role="listview"></ul>
          <div id="newUser"><p class="newUserAlert">&nbsp; Looks like we have a new user!</p>
           <p class="newUserContent"> You haven't added any buckets yet.
            <br>
          Fill out the form on the left to start tracking.
          </p></div>
        </div>
      </div>
    </div>
  </div>
